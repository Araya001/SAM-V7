@model IEnumerable<SAM_V7.Models.Users>

@{
    ViewBag.Title = "Index";
}

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    th {
        background-color: #2173c7;
        color: white;
    }
     .d {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }

    .c {
        border-radius: 5px;
        background-color: #cda8e2;
        padding: 20px;
    }
</style>



<div class="d">
    <br>
    <center>
        <h1>USER INFORMATION</h1>


        <br>
        <div class="col-md-12">
            <button class="btn btn-primary" style="margin-left:5px" onclick="location.href='@Url.Action("Create", "Users")'">
                <i class="glyphicon glyphicon-plus"> </i>
                <label>Add new User</label>
            </button>
        </div>
        <br>

     
    </center>
    <br>
</div>
<br>


<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Title Name")
        </th>
        <th>
            @Html.DisplayName("Firstname")
        </th>
        <th>
            @Html.DisplayName("Lastname")
        </th>
        <th class="col-xs-8">
            @Html.DisplayName("Position")
        </th>
        <th>
            @Html.DisplayName("Email")
        </th>
        <th>
            @Html.DisplayName("Telephone")
        </th>
        <th class="col-xs-8">
            @Html.DisplayName("Management")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TitleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tel)
        </td>
        <td>
            <button class="btn btn-warning" onclick="location.href='@Url.Action("Edit","Users",new { id = item.PSUPassport})'">
                <span class="glyphicon glyphicon-pencil"></span>
            </button>

            <button class="btn btn-success" style="margin-left:5px" onclick="location.href='@Url.Action("Details","Users",new { id = item.PSUPassport })'">
                <span class="glyphicon glyphicon-list-alt"></span>
            </button>

            <button class="btn btn-danger" style="margin-left:5px" onclick="location.href='@Url.Action("Delete","Users",new { id = item.PSUPassport })'">
                <span class="glyphicon glyphicon-trash"></span>
            </button>
        </td>
    </tr>
}

</table>
