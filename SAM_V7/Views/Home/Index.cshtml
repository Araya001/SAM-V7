@{
    ViewBag.Title = "Home Page";
}

<header>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <style>
        .button {
            background-color: rebeccapurple; /* Green */
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }

        .button1 {
            border-radius: 4px;
        }

        .button2 {
            padding: 10px 120px;
        }
    </style>
</header>

<body style="background-image: url(http://www.sydneythaiclub.com/wp-content/uploads/2015/11/IMG_9822.jpg); background-attachment: fixed; padding: 0px; ">


    <div class="container">


        <br><br><br><br><br>
        <div class="row login">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 well">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    <div class="form-group text-center">
                        <form class="form-signin">

                            <div class="form-group text-center">
                                <br><br><br><br>
                                <div class="logo">
                                    <img src="https://dorm.psu.ac.th/system/files/images/psupassport.png" alt="Smiley face" height="50%" width="80%">
                                </div>
                            </div>
                            <br><br>

                            <div class="form-group" align="center">
                                @Html.Label("PSUPassport", htmlAttributes: new { @class = "sr-only" })
                                @Html.TextBox("PSUPassport", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "PSUpassport" })
                            </div>

                            <div class="form-group" align="center">
                                @Html.Label("รหัสผ่าน", htmlAttributes: new { @class = "sr-only" })
                                @Html.Password("Password", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "Password" })
                            </div>

                            <div class="form-group" align="center">
                                <input type="submit" class="button button1 button2" value="Login" style="margin-top:20px;" />
                            </div>
                            <br><br>

                        </form>

                    </div>
                }


            </div>
        </div>

    </div>
</body>