@model SAM_V7.Models.Proposal

@{
    ViewBag.Title = "Create";
}

<style>
    .d {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }
</style>


@using (Html.BeginForm("Create", "Proposals", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

  
        

        <div class="form-horizontal">
            <div class="d">
                <center><h1>PROPOSAL INFORMATION</h1></center>
            </div>
