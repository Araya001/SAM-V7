@model SAM_V7.Models.Organizations

@{
    ViewBag.Title = "Details";
}

<style>
    .d {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }
     .c {
        border-radius: 5px;
        background-color: #cda8e2;
        padding: 20px;
    }
</style>

<div class="c">
    <br>
    <center><h1>ORGANIZATION INFORMATION</h1></center>
    <br>
</div>
<br>
<div class="d">
   
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Organization Name:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrganName)
        </dd>

        <dt>
            @Html.DisplayName("Title Adviser Name:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TitleAdviserName)
        </dd>

        <dt>
            @Html.DisplayName("Adviser Name:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdviserName)
        </dd>

        <dt>
            @Html.DisplayName("Adviser Last Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdviserLastName)
        </dd>

        <dt>
            @Html.DisplayName("Email:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdviserEmail)
        </dd>

        <dt>
            @Html.DisplayName("Telephone:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdviserTel)
